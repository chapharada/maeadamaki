{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
          "serverFiles": [
            "package.json",
            "static/**",
            "api/**"
          ],
          "generateStaticRoutes": true
      } 
    }
  ],
  "routes": [
    {
      "src": "/sw.js",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Service-Worker-Allowed": "/"
      }
    },
    { "src": "/_nuxt/.+", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" } },
    { "src": "/(.*)", "dest": "/" }
  ]
}