{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
          "serverFiles": [
            "package.json",
            "static/**",
            "api/**"
          ],
          "generateStaticRoutes": true
      } 
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/_nuxt/.+", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" } },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=1, stale-while-revalidate " },
      "dest": "/"
    },
    {
      "src": "/sw.js",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Service-Worker-Allowed": "/"
      }
    }
  ]
}