{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "generateStaticRoutes": true,
        "serverFiles": [
          "package.json",
          "static/**",
          "api/**"
        ]
      } 
    }
  ],
  "routes": [
    { "handle": "filesystem"},
    {
      "src": "/(.+)",
      "dest": "index.html"
    },
    {
      "src": "/sw.js",
      "continue": true,
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Service-Worker-Allowed": "/"
      }
    }
  ]
}